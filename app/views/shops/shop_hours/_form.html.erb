<div>
  <%= form_for [shop, shop_hour] do |form| %>
    <% if shop_hour.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(shop_hour.errors.count, "error") %> prohibited this shop_hour from being saved:</h2>

        <ul>
          <% shop_hour.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.label :day_of_week, style: "display: block" %>
