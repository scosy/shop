    <%= form.label :opens_at, style: "display: block" %>
    <%= form.time_field :opens_at %>

    <%= form.label :closes_at, style: "display: block" %>
    <%= form.time_field :closes_at %>

    <%= form.submit style: "display: block" %>
  <% end %>
</div>